<%
const layoutBody = `
<div class="tag-page">
    <h1>Tag: ${tag}</h1>
    <p>${posts.length} post${posts.length !== 1 ? 's' : ''} tagged with "${tag}"</p>
    
    <ul class="post-list">
        <% posts.forEach(post => { %>
            <li class="post-item">
                <h2><a href="<%= post.url %>"><%= post.title %></a></h2>
                <div class="post-meta">
                    <time datetime="<%= post.date %>"><%= formatDate(post.date) %></time>
                    <% if (post.readingTime) { %>
                        Â· <%= post.readingTime.text %>
                    <% } %>
                </div>
                <p><%= post.excerpt %></p>
            </li>
        <% }) %>
    </ul>
</div>
`;
%>

<%- include('layout', { body: layoutBody, title: 'Tag: ' + tag, config, meta, structuredData }) %>

