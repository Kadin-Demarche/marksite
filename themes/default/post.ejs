<%
const layoutBody = `
<article class="post">
    <h1>${post.title}</h1>
    <div class="post-meta">
        <time datetime="${post.date}">${formatDate(post.date)}</time>
        ${post.author ? `· By ${post.author}` : ''}
        ${post.readingTime ? `· ${post.readingTime.text}` : ''}
    </div>
    
    ${post.tags && post.tags.length > 0 ? `
        <div class="tags" style="margin-bottom: 2rem;">
            ${post.tags.map(tag => `
                <a href="/tags/${tag.toLowerCase().replace(/\\s+/g, '-')}/" class="tag">${tag}</a>
            `).join('')}
        </div>
    ` : ''}
    
    <div class="post-content">
        ${post.content}
    </div>
</article>
`;
%>

<%- include('layout', { body: layoutBody, title: post.title, config, meta, structuredData }) %>

