<%
const layoutBody = `
<div class="archive-page">
    <h1>Archive</h1>
    
    <% 
    const sortedKeys = Object.keys(archive).sort().reverse();
    sortedKeys.forEach(yearMonth => {
        const [year, month] = yearMonth.split('-');
        const monthName = new Date(year, month - 1).toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
        const monthPosts = archive[yearMonth];
    %>
        <div class="archive-month" style="margin-bottom: 2rem;">
            <h2 style="font-size: 1.5rem; margin-bottom: 1rem; color: #6b7280;"><%= monthName %></h2>
            <ul class="post-list" style="list-style: none; padding: 0;">
                <% monthPosts.forEach(post => { %>
                    <li style="margin-bottom: 1rem;">
                        <a href="<%= post.url %>" style="text-decoration: none; color: #2563eb;">
                            <%= post.title %>
                        </a>
                        <span style="color: #9ca3af; font-size: 0.9rem;">
                            Â· <%= formatDate(post.date, 'MMM d') %>
                        </span>
                    </li>
                <% }) %>
            </ul>
        </div>
    <% }) %>
</div>
`;
%>

<%- include('layout', { body: layoutBody, title: 'Archive', config, meta, structuredData }) %>

