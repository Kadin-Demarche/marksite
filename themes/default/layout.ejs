<!DOCTYPE html>
<html lang="<%= config.site.language || 'en' %>">
<head>
    <%- meta %>
    <title><%= typeof title !== 'undefined' ? title + ' | ' : '' %><%= config.site.title %></title>
    <%- structuredData %>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="alternate" type="application/rss+xml" title="<%= config.site.title %> RSS Feed" href="/feed.xml">
    <link rel="alternate" type="application/atom+xml" title="<%= config.site.title %> Atom Feed" href="/atom.xml">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
</head>
<body>
    <header>
        <div class="container">
            <h1><a href="/" style="color: inherit; text-decoration: none;"><%= config.site.title %></a></h1>
            <p><%= config.site.description %></p>
            <nav>
                <a href="/">Home</a>
                <a href="/about/">About</a>
                <a href="/tags/">Tags</a>
                <a href="/archive/">Archive</a>
                <a href="/feed.xml">RSS</a>
            </nav>
        </div>
    </header>

    <main class="container">
        <%- body %>
    </main>

    <footer>
        <div class="container">
            <p>&copy; <%= new Date().getFullYear() %> <%= config.site.author %>. Powered by <a href="https://github.com/yourusername/marksite" target="_blank">MarkSite</a>.</p>
        </div>
    </footer>
</body>
</html>

